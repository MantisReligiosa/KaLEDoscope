<UserControl x:Class="PixelBoardDevice.UI.ProgramPreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixelBoardDevice"
             mc:Ignorable="d" 
             Content="{Binding PreviewContent}" 
             Height="{Binding ViewHeight}" 
             Width="{Binding ViewWidht}" 
             Background="Black" 
             Cursor="{Binding Cursor}"
             local:MouseBehaviour.MouseMoveCommand="{Binding MouseMove}"
             local:MouseBehaviour.MouseDownCommand="{Binding MouseDown}"
             local:MouseBehaviour.MouseUpCommand="{Binding MouseUp}"
             local:MouseBehaviour.MouseLeaveCommand="{Binding MouseLeave}"
             local:MouseBehaviour.MouseWheelCommand="{Binding MouseWheel}">
</UserControl>
